{
    "compilerOptions": {
      "baseUrl": "./src",
      "target": "es2017",
      "module": "commonjs",
      "allowJs": true,
      "checkJs": true,
      "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
    "node_modules",
    "src/types"
    ]
  }